.mdc-layout-grid
  .mdc-layout-grid__inner
    .mdc-layout-grid__cell
      section.header
        h1 = I18n.t("view.title.preview")

.mdc-layout-grid
  .mdc-layout-grid__inner
    .mdc-layout-grid__cell
      ul.mdc-list
        li.mdc-list-item
          span.mdc-list-item__ripple
          span.mdc-list-item__text
            span.mdc-list-item__primary-text = Bridge.human_attribute_name(:title)
            span.mdc-list-item__secondary-text = @bridge.title
        li.mdc-list-item
          span.mdc-list-item__ripple
          span.mdc-list-item__text
            span.mdc-list-item__primary-text = Bridge.human_attribute_name(:address)
            span.mdc-list-item__secondary-text = @bridge.address
        li.mdc-list-item
          span.mdc-list-item__ripple
          span.mdc-list-item__text
            span.mdc-list_item__primary-text = Bridge.human_attribute_name(:road_name)
            span.mdc-list-item__secondary-text = @bridge.road_name
.mdc-layout-grid
  .mdc-layout-grid__inner
    .mdc-layout-grid__cell--span-12
      #preview_map.preview_map[data-map=true data-longitude=@bridge.location.longitude data-latitude=@bridge.location.latitude data-feature=@bridge.location.to_s]
      = javascript_pack_tag 'map/preview'

= form_with(model: @bridge, url: mlit_importer_url, local: true) do |f|
  = f.hidden_field :title
  = f.hidden_field :address
  = f.hidden_field :location
  = f.hidden_field :road_name
  .mdc-layout-grid
    .mdc-layout-grid__inner
      .mdc-layout-grid__cell
        = render partial: 'commons/mdc_fab_submit', locals: { f: f, icon: 'add', label: I18n.t("view.action.add") }

= javascript_pack_tag 'commons/form'
= javascript_pack_tag 'commons/button'